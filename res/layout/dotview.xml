<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
	<FrameLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    >
	    <LinearLayout 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:orientation="horizontal"
	        >
	        <ImageView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/page_indicator_unfocused"
			    />
		    
			<ImageView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="@dimen/dot_space"
			    android:src="@drawable/page_indicator_unfocused"
			    />
			
			<ImageView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="@dimen/dot_space"
			    android:src="@drawable/page_indicator_unfocused"
			    />
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:orientation="horizontal"
	        >
	        <ImageView 
	            android:id="@+id/first_focus_img"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/page_indicator_focused"
			    android:visibility="visible"
			    />
		    
			<ImageView 
			    android:id="@+id/second_focus_img"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="@dimen/dot_space"
			    android:src="@drawable/page_indicator_focused"
			    android:visibility="invisible"
			    />
			
			<ImageView 
			    android:id="@+id/third_focus_img"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="@dimen/dot_space"
			    android:src="@drawable/page_indicator_focused"
			    android:visibility="invisible"
			    />
	    </LinearLayout>
	</FrameLayout>
	
</LinearLayout>