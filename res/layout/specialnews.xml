<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
	<FrameLayout
	    android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="160dip" >

        <android.support.v4.view.ViewPager
            android:id="@+id/main_view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/normal_text_color_hiden"
            >
            <TextView 
	            android:text="医学的奇迹"
	            android:layout_marginLeft="@dimen/viewpage_content_title_margin"
	            android:layout_marginRight="@dimen/viewpage_content_title_margin"
	            android:textColor="@color/white"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/nav_title_font"
            />
        </LinearLayout>
        
        <com.buaa.shortytall.view.DotView
            android:id="@+id/main_dotview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="20dip" />
    </FrameLayout>
    
</LinearLayout>